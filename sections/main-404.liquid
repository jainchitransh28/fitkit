              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  </div>
</div>


{% style %}
  .template-404 {
    padding: 50px 0px;
  }
  .error_title {
    font-size: 100px;
    font-weight: 800;
    color: #473247;
    line-height: 110px;
    margin-bottom: 10px;
  }
  .lost_way {
    font-size: 22px;
    color: #EA6463;
    margin-bottom: 10px;
  }
  .back_track {
    font-size: 28px;
  }
  .redirect_area {
    padding-top: 60px;
  }
  .col_grid_item {
    flex: 0 0 33.33%;
    max-width: 33.33%;
    padding-left: 15px;
    padding-right: 15px;
  }
  .col_grid_item .item_ {
    max-width: 400px;
    margin: 15px auto;
  }
  .col_grid_item .item_ img {
    display: block;
    border-radius: 40px 40px 0 0;
  }
  .col_grid_item .action_btn {
    padding: 10px 20px;
    display: block;
    font-size: calc(var(--font-body-scale) * 15px);
    border-radius: 0 0 10px 10px;
    color: #fff;
  }
  .col_grid_item .btn1 {
    background-color: #EA6463;
  }
  .col_grid_item .btn2 {
    background-color: #76B6B1;
  }
  .col_grid_item .btn3 {
    background-color: #4FA8DB;
  }

  @media screen and (max-width: 1680.98px) {
    .error_title {
      font-size: 80px;
      line-height: 90px;
    }
    .redirect_area {
      padding-top: 40px;
    }
  }

  @media screen and (max-width: 767.98px) {
    .template-404 {
      padding: 30px 0px;
    }
    .col_grid_item {
      flex: 0 0 50%;
      max-width: 50%;
    }
    .error_title {
      font-size: 50px;
      line-height: 60px;
    }
    .lost_way {
      font-size: 14px;
    }
    .back_track {
      font-size: 20px;
    }
    .redirect_area {
      padding-top: 30px;
    }
    
  }

  @media screen and (max-width: 575.98px) {
    .col_grid_item {
      flex: 0 0 100%;
      max-width: 100%;
    }
  }
  
   
  
{% endstyle %}



<script id="esc-redirects-404-script" src="https://easyredirects.esc-apps-cdn.com/app.js"></script>