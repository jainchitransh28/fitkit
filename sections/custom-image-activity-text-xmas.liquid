{{ 'custom-image-activity-text.css' | asset_url | stylesheet_tag }}

<div class="activity_section">
  <div class="page-width">
    <div class="custom_row">
      <div class="custom_column">
        <div class="image_area">
         {%- if section.settings.image != blank -%}
          <img src="{{ section.settings.image | image_url }}" alt="{{ section.settings.image.alt | escape }}" loading="lazy">
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%} 
        </div>
      </div> 
      <div class="custom_column">
        <div class="content_entry_col">
          {% if section.settings.main_heading != blank %}
            <div class="title_col">
                <h2>
                  {{ section.settings.main_heading }}
                </h2>
            </div>
          {% endif %}
  
          {% if section.settings.desc != blank %}
            <div class="body_content">
              {{ section.settings.desc }}
            </div>
          {% endif %}
  
          {% if section.settings.button_label_1 != blank  %}
          <div class="button_row">
            <a{% if section.settings.button_link_1 == blank %} role="link" aria-disabled="true"{% else %} 
            href="{{ section.settings.button_link_1 }}"{% endif %} 
            class="button{% if section.settings.button_style_secondary_1 %} button--secondary button_outline_white {% else %} button--primary{% endif %}">
            {{ section.settings.button_label_1 | escape }}
            </a>
          </div>
           {% endif %}
  
        </div>
      </div>
    </div>
  </div>
</div>



{% style %}
  #shopify-section-{{ section.id}} .activity_section {
    background-color: {{ section.settings.bg_color }};
    padding: 100px 15px 220px;
    margin: 300px 0px 100px;
    position: relative;
    z-index: 2;

    {% if section.settings.bg_image != blank %}  
    background-image: url('{{ section.settings.bg_image | image_url }}');
    background-position: top center;
    background-repeat: no-repeat;
    {% endif %} 
  }
  #shopify-section-{{ section.id}} .activity_section:after,  #shopify-section-{{ section.id}} .activity_section:before {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    pointer-events: none;
    height: 45%;
  }
  #shopify-section-{{ section.id}} .activity_section:after {
    background-image: url('{{ "single-line.png" | asset_url }}');
    z-index: -1;
  }
  #shopify-section-{{ section.id}} .activity_section:before {
    background: -moz-linear-gradient(top, rgba(247,177,170,0) 0%, rgba(247,177,170,0.7) 100%);
    background: -webkit-linear-gradient(top, rgba(247,177,170,0) 0%,rgb(247,177,170,0.7) 100%);
    background: linear-gradient(to bottom, rgba(247,177,170,0) 0%,rgb(247,177,170,0.7) 100%);
  }

  @media screen and (max-width: 1680.98px) {
     #shopify-section-{{ section.id}} .activity_section {
        margin: 280px 0px 80px;
        padding: 60px 15px 180px;
     }
      #shopify-section-{{ section.id}} .activity_section:after,  #shopify-section-{{ section.id}} .activity_section:before {
        height: 40%;
    }
  }

  @media screen and (max-width: 989.98px) {
     #shopify-section-{{ section.id}} .activity_section {
         padding: 0px 15px 180px;
     }
      #shopify-section-{{ section.id}} .activity_section:after,  #shopify-section-{{ section.id}} .activity_section:before {
        height: 20%;
    }
  }
{% endstyle %}

