{{ 'custom-card-grid-box.css' | asset_url | stylesheet_tag }}

{% if section.settings.main_heading != blank %}
<div class="card_grid_section" id="scientist_sec">
  <div class="page-width">
    <div class="card_box_prod">
      <div class="custom_row">
        <div class="custom_column content_col">
          <div class="card_content_ele text_{{ section.settings.desktop_content_alignment }}">
            {% if section.settings.main_heading != blank  %}
            <div class="title_col">
              <h2>{{ section.settings.main_heading }}</h2>
            </div>
            {% endif %}

            {% if section.settings.des %}
            <div class="body_content">
              {{ section.settings.des }}
            </div>
            {% endif %}

            {% if section.settings.button_label_1 != blank  %}
            <div class="button_row">
              <a{% if section.settings.button_link_1 == blank %} role="link" aria-disabled="true"{% else %} 
              href="{{ section.settings.button_link_1 }}"{% endif %} 
              class="button{% if section.settings.button_style_secondary_1 %} button--secondary button_outline_white_dark  {% else %} button--primary{% endif %}">
              {{ section.settings.button_label_1 | escape }}
              </a>
            </div>
           {% endif %}
  
          </div>
        </div>
        <div class="custom_column img_col">
          <div class="card_image">
            {%- if section.settings.image != blank -%}
              <img src="{{ section.settings.image | image_url }}" alt="{{ section.settings.image.alt | escape }}" loading="lazy">
            {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%} 
          </div>
        </div>
         
      </div>
    </div>
  </div>
</div>
{% endif %}


{% style %}
   #shopify-section-{{ section.id}} {
      padding: 100px 0px 200px;
      background-image: url('{{ "bg_half_dot.png" | file_url }}');
      background-position: bottom left;
      background-repeat: no-repeat; 
      background-size: 100% auto; 
      position: relative;
   }
   #shopify-section-{{ section.id}}:after {
     content: "";
      position: absolute;
      bottom: 0;
      right: 0;
      left: 0;
      background: -moz-linear-gradient(top,  rgba(255,255,255,0) 0%, rgba(255,255,255,0.85) 100%); /* FF3.6-15 */
      background: -webkit-linear-gradient(top,  rgba(255,255,255,0) 0%,rgba(255,255,255,0.85) 100%); /* Chrome10-25,Safari5.1-6 */
      background: linear-gradient(to bottom,  rgba(255,255,255,0) 0%,rgba(255,255,255,0.85) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
      height: 15%;
      pointer-events: none;
   }
  #shopify-section-{{ section.id}} .card_grid_section {
    background-color: {{ section.settings.bg_color }};
    margin: 100px 0px;
    padding-left: 15px;
    padding-right: 15px;
  }

  @media screen and (max-width: 1680.98px) {
      #shopify-section-{{ section.id}} {
        padding: 80px 0px 120px;
     }
      #shopify-section-{{ section.id}} .card_grid_section {
        margin: 60px 0px;
      }
  }

  @media screen and (max-width: 989.98px) {
      #shopify-section-template--15684937285828__165874790512f85bc0:after {
        height: 3%;
      }
      #shopify-section-{{ section.id}} {
        padding: 150px 0px 60px;
      }
      #shopify-section-{{ section.id}} .card_grid_section {
        padding-bottom: 50px;
      } 
      #shopify-section-{{ section.id}} {
        background-size: auto 60%; 
      }
      #shopify-section-{{ section.id}}:after {
        display: none;
      }
  }


  

  
{% endstyle %}

