{{ 'custom-card-grid-box2.css' | asset_url | stylesheet_tag }}

{% if section.settings.main_heading != blank %}
<div class="card_grid_section2 my_spacer" >
  <div class="page-width">
    <div class="card_box_prod2">
      <div class="custom_row align-items-center {% if section.settings.left_side_img == true %} flex-d-row {% endif %}">
        <div class="custom_column content_col2">
          <div class="card_content_ele2 text_{{ section.settings.desktop_content_alignment }}">
            {% if section.settings.main_heading != blank  %}
            <div class="title_col">
              <h2>{{ section.settings.main_heading }}</h2>
            </div>
            {% endif %}

            {% if section.settings.des %}
            <div class="body_content2">
              {{ section.settings.des }}
            </div>
            {% endif %}

            {%- if section.settings.button_label_1 != blank -%}
              <div class="button_block ">
                  <a{% if section.settings.button_link_1 == blank %} role="link" aria-disabled="true"{% else %} 
                  href="{{ section.settings.button_link_1 }}"{% endif %} 
                  class="button{% if section.settings.button_style_secondary_1 %} button--secondary{% else %} button--primary{% endif %}">
                  {{ section.settings.button_label_1 | escape }}
                  </a>
              </div>
          {%- endif -%}
  
          </div>
        </div>
        <div class="custom_column img_col2">
          <div class="card_image2">
            {%- if section.settings.image != blank -%}
              <img src="{{ section.settings.image | image_url }}" alt="{{ section.settings.image.alt | escape }}" loading="lazy">
            {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%} 
          </div>
        </div>
         
      </div>
    </div>
  </div>
</div>
{% endif %}


{% style %}
   #shopify-section-{{ section.id}} .card_grid_section2 {
      padding: 0px 15px 180px;
      background-image: url('{{ "dot5.png" | asset_url }}');
      background-position: left bottom -30%;
       background-repeat: repeat-x;
      background-size: 100% auto; 
      position: relative;
   }
   #shopify-section-{{ section.id}} .card_grid_section2:after {
     content: "";
      position: absolute;
      bottom: 0;
      right: 0;
      left: 0;
      background-color: {{ section.settings.bg_color }};
      height: 38%;
      pointer-events: none;
     z-index: -1;
   }
   #shopify-section-{{ section.id}} .flex-d-row {
      flex-direction: row-reverse;
   }  

  @media screen and (max-width: 1680.98px) {
    #shopify-section-{{ section.id}} .card_grid_section2 {
      padding: 0px 15px 150px;
   }
  }

  @media screen and (max-width: 989.98px) {
    #shopify-section-{{ section.id}} .card_grid_section2 {
      background-position: left bottom 0;
    }
    #shopify-section-{{ section.id}} .card_grid_section2:after {
        height: 10%; 
    }
  }

  
{% endstyle %}

