{% if section.settings.main_heading != blank %}
<div class="accordion_section my_spacer">
  <div class="box_contain">
    <div class="page-width">
      {% if section.settings.main_heading != blank %}
      <div class="heading_row title_col text_{{ section.settings.desktop_content_alignment }}">
        <h2>
          {{ section.settings.main_heading }}
        </h2>
        {% if section.settings.faq_desc != blank %}
          <div class="sub_description">
            {{ section.settings.faq_desc }}
          </div>
        {% endif %}
      </div>
      {% endif %}
      
      <div class="accordion_inner">
        <ul class="accordion-list list-unstyled">
          {% for block in section.blocks %}
            {% if block.settings.faq_title != blank  %}
            <li class="accordion-list-item item--{{ block.id }}" {{ block.shopify_attributes }}>
              <div class="accordion-title ">
                 {{ block.settings.faq_title }}
              </div>
              <div class="accordion-desc" style="display: none;">
                {{ block.settings.faq_des }}
              </div>
            {% endif %}
          </li> 
          {% endfor %}       
        </ul>
      </div>
    </div>
