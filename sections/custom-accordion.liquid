{% style %}
  #shopify-section-{{ section.id}} .box_contain {
    max-width: {{section.settings.accordion_width}}px;
    margin: 0 auto;
  }
  #shopify-section-{{ section.id}} .accordion_section {
    padding-left: 15px;
    padding-right: 15px;
    position: relative;
  }
 
  {% for block in section.blocks %}
    .item--{{ block.id }} {
      margin-bottom: 20px; 
    }
    .item--{{ block.id }} .accordion-title {
      background: red;
      padding: 7px 35px 7px 15px;
      border-radius: 10px;
      cursor: pointer;
      background-color: {{ block.settings.title_bg_color }};
      color: {{ block.settings.title_color }};
      position: relative;
      text-transform: uppercase;
    }
    .item--{{ block.id }} .accordion-desc {
      padding: 0px 15px;
      margin-top: 15px;
    }
    .item--{{ block.id }} .accordion-desc p {
      margin: 0px;
    }
    .item--{{ block.id }} .accordion-desc p:not(:last-child) {
      padding-bottom: 15px;
    }
    .item--{{ block.id }} .accordion-title:after {
      content: "";
      position: absolute;
      top: 50%;
      -o-transform: ;
      -moz-transform: translateY(-50%); 
      -ms-transform: translateY(-50%); 
      -webkit-transform: translateY(-50%); 
      transform: translateY(-50%);
    }
    .item--{{ block.id }} .accordion-title:after {
      border-left: 3px solid transparent;
      border-right: 3px solid transparent;
      border-top: 6px solid;
      right: 20px;
    }
    .item--{{ block.id }}.open .accordion-title:after {
      border-bottom: 6px solid;
       border-top: 0px solid;
    }

    @media screen and (max-width: 767.98px) {
      .item--{{ block.id }} {
         font-size: calc(var(--font-body-scale) * 12px);
         line-height: calc(var(--font-body-scale) * 16px);
       }
      .item--{{ block.id }} .accordion-title {
        text-transform: initial;
      }
    
    }
  {% endfor %}
{% endstyle %}

