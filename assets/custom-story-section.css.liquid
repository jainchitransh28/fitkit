.story_section .image_area {
  margin-top: -150px;
}
.story_section .image_area img {
  border-radius: 40px;
  display: block;
  margin: 0 auto;
}
.story_section .story_content {
  max-width: 500px;
}

@media screen and (max-width: 1680.98px) {
  .story_section .image_area {
    margin-left: auto;
    margin-right: auto;
    margin-top: -100px;
    max-width: 400px;
  }
}

@media screen and (max-width: 989.98px) {
  .story_section .custom_column {
    flex: 0 0 100%;
    max-width: 100%;
  }
  .story_section .image_area {
    margin-bottom: 40px;
  }
  .story_section .story_content {
    max-width: 100%;
  }
  .story_section {
    text-align: center;
  }
}