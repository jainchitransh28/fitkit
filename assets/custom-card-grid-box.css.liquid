.card_grid_section .card_content_ele {
  padding: 100px 0px;
}
.card_grid_section .card_box_prod {
  padding: 0px 70px;
}
.card_grid_section .card_content_ele, .card_grid_section .card_content_ele h2 {
  color: #fff;
}
.card_grid_section .card_image {
  margin-top: -150px;
  margin-bottom: -150px;
}
.card_grid_section .card_image img { 
  border-radius: 40px;
  display: block;
}
.card_grid_section .custom_column {
  align-self: center;
}

@media screen and (max-width: 1680.98px) {
  .card_grid_section .card_image {
    margin: -150px auto;
    max-width: 400px;
  }
  .card_grid_section .card_box_prod {
    padding: 0px 60px;
  }
}

@media screen and (max-width: 1367.98px) {
  .card_grid_section .card_box_prod {
    padding: 0px 50px;
  }
  .card_grid_section .card_image {
    max-width: 370px;
  }
}


@media screen and (max-width: 989.98px) {
  .card_grid_section .img_col {
    order: 1;
  }
  .card_grid_section .content_col {
    order: 2;
  }
  .card_grid_section .custom_column {
    flex: 0 0 100%;
    max-width: 100%;
  }
  .card_grid_section .card_image img {
    margin: 0 auto;
  }
  .card_grid_section .card_content_ele {
    padding: 40px 0 0px;
    text-align: center;
  }
  .card_grid_section .card_image {
    margin-bottom: 0;
    margin-top: -230px;
  }
  .card_grid_section .card_box_prod {
    padding: 0px;
  }
  
}