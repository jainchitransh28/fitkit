@media screen and (max-width: 991.98px) {
  .card_slider .content_col {
    padding: 15px;
  }
  .rating_prod_section .content_bottom {
    padding-left: 15px;
    padding-right: 15px;
  }
}

@media screen and (max-width: 767.98px) {
  .card_slider .client_col .name_field {
    font-size: calc(var(--font-body-scale) * 12px);
    line-height: calc(var(--font-body-scale) * 15px);
  }
  .rating_prod_section .content_bottom .img_label {
    margin-top: -35px;
  }
  .rating_prod_section .content_bottom .img_label img {
    height: 77px;
  }
  .rating_prod_section .card_slider {
    max-width: 380px;
  }
}

@media screen and (max-width: 575.98px) {
  .rating_prod_section .content_bottom .left_element {
